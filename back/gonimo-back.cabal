name:                gonimo-back
version:             1.0.2.1
homepage:            gonimo.com
license:             AGPL-3
license-file:        LICENSE
author:              Robert Klotzner

maintainer:          robert[dot]klotzner[at]gmx[dot]at

category:            Web

build-type:          Simple

cabal-version:       >=1.10

data-files:          data/*.txt

Flag dev
    Description:   Turn on development settings.
    Default:       False

library
  hs-source-dirs:      src
  default-language:    Haskell2010
  if flag(dev)
      cpp-options:   -DDEVELOPMENT
      ghc-options:   -Wall -fwarn-tabs -O0
  else
      ghc-options:   -Wall -fwarn-tabs -O2
      -- extra-libraries:    pq
      --                   , crypto
      --                   , ssl

  exposed-modules:  Gonimo.Database.Effects.Servant
                  , Gonimo.Db.Entities
                  , Gonimo.Server.Auth
                  , Gonimo.Server.Db.Account
                  , Gonimo.Server.Db.Device
                  , Gonimo.Server.Db.Family
                  , Gonimo.Server.Db.Internal
                  , Gonimo.Server.Db.Invitation
                  , Gonimo.Server.Db.IsDb
                  , Gonimo.Server.Effects
                  , Gonimo.Server.EmailInvitation
                  , Gonimo.Server.Handlers
                  , Gonimo.Server.Handlers.Auth
                  , Gonimo.Server.Handlers.Messenger
                  , Gonimo.Server.Handlers.Socket
                  , Gonimo.Server.Messenger
                  , Gonimo.Server.Messenger.Internal
                  , Gonimo.Server.NameGenerator
                  , Gonimo.Server.Subscriber
                  , Gonimo.Server.Subscriber.Types
                  , Gonimo.SocketServer
                  , Gonimo.Types.Extended

  other-modules:  Utils.Control.Monad.Trans.Maybe
                , Utils.System.Random
                , Utils.Constants
                , Utils.STM
                , Paths_gonimo_back

  default-extensions: ConstraintKinds
                    , DataKinds
                    , DeriveGeneric
                    , GeneralizedNewtypeDeriving
                    , OverloadedStrings
                    , PolyKinds
                    , TypeOperators
                    , ScopedTypeVariables
                    , FlexibleContexts

  build-depends:        aeson < 1.5.0.0
                      , async
                      , attoparsec
                      , base >=4.8 && <4.13
                      , base64-bytestring
                      , bytestring >= 0.10.6.0
                      , case-insensitive
                      , snap-core
                      , io-streams
                      , containers
                      , crypto-api
                      , either >= 4.4.1
                      , errors
                      , extra
                      , fast-logger
                      , gonimo-common
                      , http-api-data
                      , http-types
                      , lens >= 4.13
                      , lifted-async
                      , lifted-base >= 0.2.3.6
                      , mime-mail >= 0.4.11
                      , monad-control
                      , monad-logger
                      , monad-stm
                      , mtl
                      , neat-interpolation
                      , persistent
                      -- , persistent-postgresql
                      , persistent-sqlite
                      , persistent-template
                      , random
                      , resource-pool
                      , smtp-mail
                      , stm
                      , template-haskell
                      , text >= 1.2.1.3
                      , time >= 1.5.0.1
                      , transformers >= 0.4.2.0
                      , transformers-base
                      , vector
                      , wai
                      , wai-websockets
                      , warp
                      , websockets
                      , directory
                      , filepath


